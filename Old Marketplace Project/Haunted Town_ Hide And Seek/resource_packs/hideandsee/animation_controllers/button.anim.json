{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.button": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "pressed": "q.is_ignited"
                    }]
                },
                "pressed": {
                    "animations": [
                        "pressed"
                    ],
                    "transitions": [{
                        "default": "!q.is_ignited && q.all_animations_finished"
                    }]
                }
            }
        }
    }
}