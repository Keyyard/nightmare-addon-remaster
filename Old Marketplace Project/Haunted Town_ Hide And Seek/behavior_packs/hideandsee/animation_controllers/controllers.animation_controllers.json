{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.system": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "seeker": "query.mark_variant == 1"
                    }]
                },
                "seeker": {
                    "on_entry": [
                        "/tag @s add seeker"
                    ],
                    "transitions": [{
                        "default": "1.0"
                    }]
                }
            }
        },
        "controller.animation.trigger": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "start": "query.variant == 1"
                    }],
                    "on_exit": [
                        "/setblock 18 102 -15 redstone_block"
                    ]
                },
                "start": {
                    "on_entry": [
                        "v.end = q.life_time;"
                    ],
                    "transitions": [{
                        "end": "(q.life_time - v.end) >= 5.0"
                    }]
                },
                "end": {
                    "transitions": [{
                        "default": "1.0"
                    }],
                    "on_exit": [
                        "@s reset"
                    ]
                }
            }
        },

        "controller.animation.htp.trigger": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "pressed": "query.is_ignited"
                    }]
                },
                "pressed": {
                    "transitions": [{
                        "default": "!query.is_ignited"
                    }],
                    "on_entry": [
                        "/function howtoplay"
                    ]
                }
            }
        },

        "controller.animation.credit.trigger": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "pressed": "query.is_ignited"
                    }]
                },
                "pressed": {
                    "transitions": [{
                        "default": "!query.is_ignited"
                    }],
                    "on_entry": [
                        "/function credit"
                    ]
                }
            }
        },
        "controller.animation.demon": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "on": "query.get_equipped_item_name == 'demon' && query.is_using_item"
                    }]
                },
                "on": {
                    "on_entry": [
                        "/replaceitem entity @s slot.weapon.mainhand 0 air",
                        "/replaceitem entity @s slot.armor.head 0 item:demon"
                    ],
                    "transitions": [{
                        "default": "1.0"
                    }]
                }
            }
        },
        "controller.animation.ring": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "on": "query.get_equipped_item_name == 'ring' && query.is_using_item"
                    }]
                },
                "on": {
                    "on_entry": [
                        "/replaceitem entity @s slot.weapon.mainhand 0 air",
                        "/replaceitem entity @s slot.armor.head 0 item:ring"
                    ],
                    "transitions": [{
                        "default": "1.0"
                    }]
                }
            }
        },
        "controller.animation.bird": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "on": "query.get_equipped_item_name == 'bird' && query.is_using_item"
                    }]
                },
                "on": {
                    "on_entry": [
                        "/replaceitem entity @s slot.weapon.mainhand 0 air",
                        "/replaceitem entity @s slot.armor.head 0 item:bird"
                    ],
                    "transitions": [{
                        "default": "1.0"
                    }]
                }
            }
        },
        "controller.animation.witch": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{
                        "on": "query.get_equipped_item_name == 'witch' && query.is_using_item"
                    }]
                },
                "on": {
                    "on_entry": [
                        "/replaceitem entity @s slot.weapon.mainhand 0 air",
                        "/replaceitem entity @s slot.armor.head 0 item:witch"
                    ],
                    "transitions": [{
                        "default": "1.0"
                    }]
                }
            }
        }
    }
}