{
  "format_version": "1.20.10",
  "minecraft:entity": {
    "description": {
      "identifier": "mob:broken",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "scale_up": {
        "minecraft:scale": {
          "value": 4.0
        }
      },
      "scale_down": {
        "minecraft:scale": {
          "value": 0.25
        }
      },
      "default": {
        "minecraft:scale": {
          "value": 1
        }
      },
	  "random": {
		"minecraft:timer": {
			"time":[
				1,
				20
			],
			"looping": true,
			"time_down_event": {
				"event": "random_scale"
			}
		}
	  }
    },
    "components": {
      "minecraft:experience_reward": {
        "on_death": "query.is_powered ? 0.0 : (query.last_hit_by_player ? math.random(6.0, 8.0) : 0.0)"
      },
      "minecraft:type_family": {
        "family": ["broken", "monster", "mob"]
      },
      "minecraft:health": {
        "value": 10,
        "max": 10
      },
      "minecraft:collision_box": {
        "width": 0.9,
        "height": 1.8
      },
      "minecraft:attack": {
        "damage": 3,
        "effect_name": "wither",
        "effect_duration": 2
      },
      "minecraft:movement": {
        "value": 0.23
      },
      "minecraft:break_blocks": {
        "breakable_blocks": [
          "minecraft:wooden_door",
          "minecraft:acacia_door",
          "minecraft:birch_door",
          "minecraft:dark_oak_door",
          "minecraft:spruce_door",
          "minecraft:trapdoor",
          "minecraft:acacia_trapdoor",
          "minecraft:birch_trapdoor",
          "minecraft:dark_oak_trapdoor",
          "minecraft:spruce_trapdoor"
        ]
      },
      "minecraft:behavior.open_door": {
        "priority": 6,
        "close_door_after": true
      },
      "minecraft:annotation.open_door": {},
      "minecraft:navigation.climb": {
        "can_pass_doors": true,
        "can_open_doors": true,
        "can_open_iron_doors": true,
        "can_path_over_water": true,
        "can_path_from_air": true,
        "avoid_sun": true
      },
      "minecraft:movement.basic": {},
      "minecraft:jump.static": {},
      "minecraft:can_climb": {},
      "minecraft:fire_immune": {},
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 32
          }
        ],
        "must_see": true
      },
      "minecraft:behavior.melee_attack": {
        "priority": 2,
        "speed_multiplier": 1.25,
        "track_target": true
      },
      "minecraft:behavior.random_stroll": {
        "priority": 5,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 0,
        "look_distance": 16
      },
      "minecraft:behavior.random_look_around": {
        "priority": 6
      },
      "minecraft:follow_range": {
        "value": 64,
        "max": 64
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:physics": {},
      "minecraft:conditional_bandwidth_optimization": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      }
    },
    "events": {
		"minecraft:entity_spawned": {
			"add": {
				"component_groups": [
					"default", "random"
				]
			}
		},
		"random": {
			"randomize": [
				{
					"add": {
						"component_groups": [
							"scale_up"
						]
					},
					"remove": {
						"component_groups": [
							"default", "scale_down"
						]
					}
				},
				{
					"add": {
						"component_groups": [
							"scale_down"
						]
					},
					"remove": {
						"component_groups": [
							"default", "scale_up"
						]
					}
				},
				{
					"add": {
						"component_groups": [
							"default"
						]
					},
					"remove": {
						"component_groups": [
							"scale_up", "scale_down"
						]
					}
				}
			]
		}
	}
  }
}
