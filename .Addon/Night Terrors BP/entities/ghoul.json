                        "operator": "==",
                        "value": true
                      },
                      {
                        "all_of": [
                          {
                            "test": "is_family",
                            "subject": "other",
                            "operator": "!=",
                            "value": "player"
                          },
                          {
                            "test": "is_family",
                            "subject": "other",
                            "operator": "!=",
                            "value": "ghost"
                          },
                          {
                            "test": "is_family",
